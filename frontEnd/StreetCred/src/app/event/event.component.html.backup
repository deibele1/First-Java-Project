<div class="event-container">
    <table>
        <thead>
            <th id="advent">Event Date</th>
            <th id="title">Event Title</th>
            <th id="details">Details</th>
            <th id="cat">Category</th>
            <th id="creator">Created By</th>
            <th></th>
        </thead>
        <tbody>
            <tr>
                <td id="advent"> {{ event.advent }} </td>
                <td id="title"> {{ event.eventName }} </td>
                <td id="details"> {{ event.description }}</td>
                <td id="cat"> {{ event.category }} </td>
                <td id="creator"> {{ event.creatorUsername }} </td>
                <button id="view" (click)="view()"></button>
            </tr>
        </tbody>
    </table>
</div>